{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Terra",
	"patterns": [
		{
			"include": "#terraBlock"
		},
		{
			"include": "source.lua"
		}
	],
	"repository": {
		"terraBlock": {
			"patterns": [
				{
					"begin": "\\b(terra|quote)\\b",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.terra"
						},
						"2": {
							"name": "keyword.operator.terra"
						}
					},
					"end": "(?=\\bend\\b)",
					"patterns": [
						{
							"name": "keyword.control.terra",
							"match": "\\b(terra|if|else|elseif|repeat|for|until|end|while|break|in|return|then|do|var|switch|case|defer|struct|escape)\\b"
						}
					]
				}
			]
		}
	},
	"scopeName": "source.terra"
}